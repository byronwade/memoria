{
	"name": "@byronwade/memoria",
	"version": "1.0.14",
	"description": "The Memory Your AI Lacks - MCP server giving AI Senior Developer Intuition through git forensics",
	"type": "module",
	"main": "dist/index.js",
	"module": "./src/index.ts",
	"bin": {
		"memoria": "dist/cli.js",
		"memoria-server": "dist/index.js"
	},
	"files": [
		"dist",
		"rules",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "npm run build && npm test"
	},
	"keywords": [
		"mcp",
		"git",
		"memoria",
		"memory",
		"forensics",
		"code-analysis",
		"model-context-protocol",
		"ai-tools"
	],
	"author": "Byron Wade",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/byronwade/memoria.git"
	},
	"homepage": "https://github.com/byronwade/memoria",
	"bugs": {
		"url": "https://github.com/byronwade/memoria/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"knip": {
		"ignore": [
			"benchmarks/**"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@modelcontextprotocol/sdk": "^1.0.4",
		"ignore": "^7.0.5",
		"lru-cache": "^11.2.4",
		"simple-git": "^3.27.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/node": "^20.14.0",
		"@vitest/coverage-v8": "^4.0.15",
		"@vitest/ui": "^4.0.15",
		"typescript": "^5.5.0",
		"vitest": "^4.0.15"
	}
}
