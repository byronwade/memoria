{
	"name": "memoria-monorepo",
	"version": "1.0.14",
	"private": true,
	"description": "Monorepo for Memoria MCP server, website, and API",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"dev:tunnel": "concurrently \"turbo run dev --parallel\" \"cloudflared tunnel run memoria\"",
		"tunnel": "cloudflared tunnel run memoria",
		"tunnel:setup": "./scripts/setup-tunnel.sh",
		"test": "turbo run test",
		"lint": "turbo run lint --parallel"
	},
	"author": "Byron Wade",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/byronwade/memoria.git"
	},
	"homepage": "https://github.com/byronwade/memoria",
	"bugs": {
		"url": "https://github.com/byronwade/memoria/issues"
	},
	"packageManager": "npm@11.6.2",
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"turbo": "^2.6.3"
	}
}
